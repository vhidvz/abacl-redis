{
  "name": "abacl-redis",
  "version": "1.0.2",
  "description": "Redis driver for ABACL.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "debug": "jest --watch",
    "prebuild": "rimraf dist",
    "doc": "typedoc --out docs src/",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist && rm -rf ./coverage",
    "lint": "eslint . '*/**/*.{js,ts}' --quiet --fix",
    "format": "prettier --write \"(src|test)/**/*.(ts|js)\"",
    "start:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "test": "jest && make-coverage-badge --report-path docs/coverage/coverage-summary.json --output-path coverage-badge.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vhidvz/abacl-redis.git"
  },
  "author": "Vahid V.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vhidvz/abacl-redis/issues"
  },
  "keywords": [
    "abacl",
    "driver",
    "abacl-driver",
    "redis-driver",
    "abacl-redis-driver"
  ],
  "homepage": "https://github.com/vhidvz/abacl-redis#readme",
  "peerDependencies": {
    "abacl": "^7.0.1",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "jshint": "^2.13.6",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "/dist"
  ]
}
